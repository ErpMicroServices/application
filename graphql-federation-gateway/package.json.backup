{
  "name": "erp-graphql-federation-gateway",
  "version": "1.0.0",
  "description": "Revolutionary GraphQL Federation Gateway for Think Different ERP System",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:dev": "tsx src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "docker:build": "docker build -t erp-federation-gateway .",
    "docker:run": "docker run -p 4000:4000 erp-federation-gateway",
    "k8s:deploy": "kubectl apply -f k8s/",
    "compose-schema": "rover supergraph compose --config supergraph.yaml"
  },
  "keywords": [
    "graphql",
    "federation",
    "apollo",
    "microservices",
    "erp",
    "enterprise",
    "revolutionary"
  ],
  "author": "Think Different ERP Team",
  "license": "Apache-2.0",
  "dependencies": {
    "@apollo/gateway": "^2.8.1",
    "@apollo/server": "^4.11.0",
    "@apollo/subgraph": "^2.8.1",
    "@apollo/utils.keyvaluecache": "^3.1.0",
    "@apollo/utils.logger": "^3.0.0",
    "apollo-server-express": "^3.12.1",
    "cors": "^2.8.5",
    "dataloader": "^2.2.2",
    "express": "^4.19.2",
    "graphql": "^16.9.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.16.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "prom-client": "^15.1.3",
    "winston": "^3.14.2",
    "ws": "^8.18.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-node": "^0.52.1",
    "@opentelemetry/auto-instrumentations-node": "^0.49.1",
    "@opentelemetry/exporter-jaeger": "^1.26.0",
    "@opentelemetry/exporter-prometheus": "^0.52.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.5.0",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@typescript-eslint/parser": "^8.2.0",
    "eslint": "^9.9.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}