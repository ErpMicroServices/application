# OAuth2 Configuration
OAUTH2_CLIENT_ID=erp-microservices-client
OAUTH2_CLIENT_SECRET=your-client-secret-here
OAUTH2_AUTHORIZATION_SERVER_URL=http://localhost:9090
OAUTH2_TOKEN_URL=http://localhost:9090/oauth2/token
OAUTH2_AUTHORIZE_URL=http://localhost:9090/oauth2/authorize
OAUTH2_USERINFO_URL=http://localhost:9090/oauth2/userinfo
OAUTH2_INTROSPECT_URL=http://localhost:9090/oauth2/introspect
OAUTH2_JWKS_URL=http://localhost:9090/oauth2/jwks
OAUTH2_REDIRECT_URL=http://localhost:8080/auth/callback
OAUTH2_SCOPES=read,write
OAUTH2_TIMEOUT=30s

# JWT Configuration
JWT_ISSUER=http://localhost:9090
JWT_AUDIENCE=erp-microservices
JWT_SIGNING_KEY=your-jwt-signing-key-here

# Token Cache Configuration
TOKEN_CACHE_TTL=3600s
TOKEN_CACHE_CLEANUP_INTERVAL=600s

# Service Configuration
SERVICE_NAME=auth-go
SERVICE_PORT=8080
SERVICE_HOST=localhost

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60s